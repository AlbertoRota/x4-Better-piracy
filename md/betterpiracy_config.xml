    <library name="Reset_Config">
      <actions>
        <set_value
          name="Config.$Config"
          exact="table[
            $harass_shield_threshold = null,
            $early_harass_hull_threshold = null,
            $harass_bail_attepmps_before_mid = null,
            $mid_harass_hull_threshold = null,
            $harass_bail_attepmps_before_late = null,
            $late_harass_hull_threshold = null,
            $keep_pressure_timer = null,
            $keep_pressure_max_distance_sm = null,
            $keep_pressure_max_distance_lxl = null,
            $pressure_buildup_rate = null,
            $harass_lxl_min_crew_left_base = null,
            $harass_lxl_min_crew_left_pilot = null,
            $harass_base_bail_chance = null,
            $harass_base_bail_number = null,
            $harass_reputation_hit = null,
            $harass_bailing_pilots_damage_hull = null,
            $harass_bailing_pilots_destroy_components = null,
            $combat_base_bail_chance = null,
            $combat_reputation_hit = null,
            $combat_bailing_pilots_damage_hull = null,
            $combat_bailing_pilots_destroy_components = null
          ]"
        />
      </actions>
    </library>

    <!-- Register the config menu. -->
    <cue name="Reset_OnReload" instantiate="true">
      <conditions>
        <event_cue_signalled cue="md.Simple_Menu_Options.Reloaded"/>
      </conditions>
      <actions>
        <signal_cue_instantly
          cue = "md.Simple_Menu_Options.Register_Option"
          param = "table[
            $category   = {61537, 5150},  
            $id         = '$harass_shield_threshold',
            $name       = {61537, 5151},
            $mouseover  = {61537, 5152},
            $type       = 'slidercell',
            $default    = 20,
            $args       = table[$min = 0, $max = 100, $suffix = '%'],
            $callback   = OnChange
          ]"
        />
        <signal_cue_instantly
          cue = "md.Simple_Menu_Options.Register_Option"
          param = "table[
            $category   = {61537, 5150},  
            $id         = '$early_harass_hull_threshold',
            $name       = {61537, 5153},
            $mouseover  = {61537, 5154},
            $type       = 'slidercell',
            $default    = 75,
            $args       = table[$min = 0, $max = 100, $suffix = '%'],
            $callback   = OnChange
          ]"
        />
        <signal_cue_instantly
          cue = "md.Simple_Menu_Options.Register_Option"
          param = "table[
            $category   = {61537, 5150},  
            $id         = '$harass_bail_attepmps_before_mid',
            $name       = {61537, 5155},
            $mouseover  = {61537, 5156},
            $type       = 'slidercell',
            $default    = 3,
            $args       = table[$min = 1, $max = 100],
            $callback   = OnChange
          ]"
        />
        <signal_cue_instantly
          cue = "md.Simple_Menu_Options.Register_Option"
          param = "table[
            $category   = {61537, 5150},  
            $id         = '$mid_harass_hull_threshold',
            $name       = {61537, 5157},
            $mouseover  = {61537, 5158},
            $type       = 'slidercell',
            $default    = 50,
            $args       = table[$min = 0, $max = 100, $suffix = '%'],
            $callback   = OnChange
          ]"
        />
        <signal_cue_instantly
          cue = "md.Simple_Menu_Options.Register_Option"
          param = "table[
            $category   = {61537, 5150},  
            $id         = '$harass_bail_attepmps_before_late',
            $name       = {61537, 5159},
