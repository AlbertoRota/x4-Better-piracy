            $callback   = OnChange
          ]"
        />
        <signal_cue_instantly
          cue = "md.Simple_Menu_Options.Register_Option"
          param = "table[
            $category   = {61537, 5150},  
            $id         = '$harass_base_bail_chance',
            $name       = {61537, 5175},
            $mouseover  = {61537, 5176},
            $type       = 'slidercell',
            $default    = 60,
